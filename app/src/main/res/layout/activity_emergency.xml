<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="au.com.ourpillstalk.ourpillstalk.activities.EmergencyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last 20 Unique Scans"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>

        <fragment
            android:id="@+id/fragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="au.com.ourpillstalk.ourpillstalk.fragments.Last20UniqueScansFragment"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Information"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>

        <fragment
            android:id="@+id/fragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="au.com.ourpillstalk.ourpillstalk.fragments.UserInfoFragment"/>

    </LinearLayout>

</LinearLayout>