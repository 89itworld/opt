<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/linearLayout4"
    tools:context="au.com.ourpillstalk.ourpillstalk.activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_selectLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_language_text"
            android:gravity="center"
            android:textSize="@dimen/textSize"
            android:padding="15dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/txt_translatedselectLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="2"
            android:text="(Select Language)"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:typeface="sans"
            android:textSize="@dimen/textSize1"
            tools:ignore="HardcodedText"/>

        <Spinner
            android:id="@+id/spnr_mLanguageChooser"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_updateUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_updateUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="2"
            android:text="Update User Info"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:typeface="sans"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/txt_translatedupdateUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="2"
            android:text="(Update User Info)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:typeface="sans"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_eraseAllScans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_eraseAllScans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="2"
            android:text="Erase All Scans"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:typeface="sans"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/txt_translatederaseAllScans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="2"
            android:text="(Erase All Scans)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:typeface="sans"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

</LinearLayout>