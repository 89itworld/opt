<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainActivity"
    android:background="@color/white"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_mScanner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/light_green"
            android:layout_marginBottom="2dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/qr_size"
                android:layout_height="@dimen/qr_size"
                app:srcCompat="@drawable/qr_codes"/>


            <TextView
                android:id="@+id/txt_scanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="Scan My Pills"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:textColor="@color/white"
                android:typeface="sans"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/txt_translatedscanText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:maxLines="1"
                android:text="(Scan My Pills)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:typeface="sans"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_mHistory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/dark_green"
                    android:layout_marginRight="2dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/logoSize"
                        android:layout_height="@dimen/logoSize"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        app:srcCompat="@drawable/hourglass"/>

                    <TextView
                        android:id="@+id/txt_historyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="History"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/txt_translatedhistoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="(History)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mSettings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/purple"
                    android:layout_marginLeft="2dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/logoSize"
                        android:layout_height="@dimen/logoSize"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/settings"/>

                    <TextView
                        android:id="@+id/txt_settingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Settings"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/txt_translatedsettingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="(Settings)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:id="@+id/btn_mEmergency"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/red"
                    android:layout_marginRight="2dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/logoSize"
                        android:layout_height="@dimen/logoSize"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/warning_sign"/>

                    <TextView
                        android:id="@+id/txt_emergencyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="Emergency"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/txt_translatedemergencyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="(Emergency)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_mHelp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/blue"
                    android:layout_marginLeft="2dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/logoSize"
                        android:layout_height="@dimen/logoSize"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/question_mark"/>

                    <TextView
                        android:id="@+id/txt_helpText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Help"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                    <TextView
                        android:id="@+id/txt_translatedhelpText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="(Help)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/white"
                        android:typeface="sans"
                        tools:ignore="HardcodedText"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>